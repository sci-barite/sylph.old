{
    "name": "my first extension",
    "version": "1.0.0",
    "description": "Very first extension",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "js": ["content.js"],
            "run_at": "document_end",
            "matches": ["https://*.linkedin.com/in*"]
        }
    ],
    "permissions": [
        "bookmarks", "storage", "tabs", "https://script.google.com/macros/s/"
    ]
}