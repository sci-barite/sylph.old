{
    "name": "Sylph",
    "version": "1.4.3",
    "description": "Chrome Extension to sift data from some websites, for a Google Apps Script web app to process.",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "page_action": {
        "default_icon": "images/sylph32.png"
    },
    "content_scripts": [
        {
            "js": ["content.js"],
            "run_at": "document_end",
            "matches": [
                "https://*.linkedin.com/in*", "https://*.djinni.co/home/inbox*", "https://*.upwork.com/ab/applicants/*", "https://*.upwork.com/freelancers/*"
            ]
        }
    ],
    "permissions": [
        "bookmarks", "storage", "tabs", "https://script.google.com/macros/s/"
    ]
}